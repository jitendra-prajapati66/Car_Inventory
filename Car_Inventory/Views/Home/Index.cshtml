@model IEnumerable<Car>;

<form method="post">
    <div class="container mb-4 ">
        <h3 class="text-center">Car Inventory</h3>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <p>Filter criterias</p>
                    <div class=row>
                        <div class="col mb-2">
                            <input class="form-control" id="searchBrand" name="searchBrand" placeholder="Brand..." />
                        </div>
                        <div class="col">
                            <input class="form-control" id="searchModel" name="searchModel" placeholder="Model..." />
                        </div>
                        <div class="col">
                            <button class="btn btn-warning text-white form-control"><i class="fas fa-search"></i>&nbsp; search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="container p-3 bg-white">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-info">
                Car List
            </h2>
        </div>
        <div class="col-6 text-right">
            <!--create Button trigger modal -->
            <button type="button" class="btn btn-info" data-toggle="model" data-target="#addCar"
                    data-url="@Url.Action($"UpSert")">
                add New Car
            </button>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th> Brand Name</th>
                    <th> Model Name</th>
                    <th> Price </th>
                    <th> Year </th>
                    <th> IsNew</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {

                    <tr>
                        <td width="20%">
                            @obj.Brand
                        </td>
                        <td width="15%">
                            @obj.Model
                        </td>
                        <td width="15%">
                            @(obj.Price)
                        </td>
                        <td width="15%">
                            @obj.Year

                        </td>
                        <td width="15%">
                            @obj.isNew
                        </td>
                        <td>
                            <div class="text-center " width="20%">
                                <!--delete Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-toggle="model" data-target="#addCar"
                                data-url="@Url.Action($"Delete/{@obj.Id}")">
                                    Delete
                                </button>
                                <!--update Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="model" data-target="#addCar"
                                data-url="@Url.Action($"UpSert/{@obj.Id}")">
                                    Update
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>
            No Car Available
        </p>
    }

</div>

<div id="placeHolder"></div>
@section scripts{

    @{
    <partial name="_ValidationScriptsPartial" />
    }
<script src="~/js/site.js">
</script>
}






